!!!
%html
  %head
    %title Volunteer Connect: Guinea
    = stylesheet_link_tag    "application", media: "all",  'data-turbolinks-track' => true
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body


    %nav.navbar.navbar-default
      .container-fluid
        .row
          .col-lg-3.col-md-3.col-sm-4.col-xs-4
            %a.navbar-brand{:href => "#"} Volunteer Connect: Guinea

          .col-lg-2.col-md-3.col-sm-3.col-xs-5
            %ul.nav.nav-tabs
              %li
                = link_to "Home", root_path
              %li
                = link_to "About", about_path

          .col-lg-7.col-md-6.col-sm-5.col-xs-3
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                - if current_user
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    %span.btn.glyphicon.glyphicon-user
                      %span.caret
                  %ul.dropdown-menu#log_in{:role => "menu"}
                    %li
                      =link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do
                        Account Info
                      = link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do
                        Log Out
                - else
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    Log in
                    %span.caret
                  %ul.dropdown-menu#log_in{:role => "menu"}
                    %li
                      = link_to "Log In", new_user_session_path
                    %li.divider
                    %li
                      = link_to "Sign Up", new_user_registration_path


    = yield
