!!!
%html
  %head
    %title Volunteer Connect: Guinea
    = stylesheet_link_tag    "application", media: "all",  'data-turbolinks-track' => true
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container-fluid

        .row
          .col-lg-3.col-md-1.col-sm-2.col-xs-4
            %a.navbar-brand{:href => "#"} Volunteer Connect

          .col-lg-2.col-lg-push-7.col-md-2.col-md-push-9.col-sm-2.col-sm-push-8.col-xs-8
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                - if current_user
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    = current_user.name
                    %span.glyphicon.glyphicon-user.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      =link_to current_user.name, edit_user_registration_path
                      =link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do
                        Account Info
                      = link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do
                        Log Out
                - else
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    Log in
                    %span.caret
                  %ul.dropdown-menu#log_in{:role => "menu"}
                    %li
                      = link_to "Log In", new_user_session_path
                    %li.divider
                    %li
                      = link_to "Sign Up", new_user_registration_path

          .col-lg-7.col-lg-pull-2.col-md-9.col-md-pull-2.col-sm-8.col-sm-pull-2.col-xs-12
            %form.navbar-form.navbar-left{:role => "search"}
              %button.dropdown.btn.btn-default#search_menu_button
                %a.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  %span.btn.glyphicon.glyphicon-th-list
                    %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "#"} All
                  %li
                    %a{:href => "#"} Location
                  %li
                    %a{:href => "#"} Time Period
                  %li.divider
                  %li
                    %a{:href => "#"} Keyword
              .form-group
                %input.form-control{:placeholder => "Search for people, villages, time periods, and much more..", :type => "text"}/
              %button.btn.btn-default.glyphicon.glyphicon-search#search_button{:type => "submit"}
        .row
          .col-lg-3.col-md-4.col-sm-5.col-xs-8
            %ul.nav.nav-tabs
              %li
                = link_to "Home", root_path
              %li
                = link_to "About", about_path
              %li
                = link_to "Profile", about_path
          .col-lg-7.col-md-6.col-sm-5.col-xs-4
            %ul.nav.nav-tabs.nav-justified
              %li
                = link_to "Add a Post", root_path, class: 'btn'

          .col-lg-2.col-md-2.col-sm-2





      - if flash[:notice]
        .alert.alert-success
          %button.close{"data-dismiss" => "alert", :type => "button"} ×
          = flash[:notice]
      - elsif flash[:error]
        .alert.alert-danger
          %button.close{"data-dismiss" => "alert", :type => "button"} ×
          = flash[:error]
      - elsif flash[:alert]
        .alert.alert-warning
          %button.close{"data-dismiss" => "alert", :type => "button"} ×
          = flash[:alert]
    .left-nav
      .nav-content
        = yield :nav_content

    .main-body
      .main-content
        = yield :main_content
