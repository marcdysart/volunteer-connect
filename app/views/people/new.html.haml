- content_for :nav_content do
  %h1 Add a New Person

- content_for :main_content do
  .col-md-8
    = form_for @person do |f|
      %form.form-inline{:role => "form"}
        .form-group
          = f.label :"Enter New Person"
          .row
            .col-md-6
              = f.text_field :name, class: 'form-control', placeholder: "Enter New Person"
            .col-md-3
              = f.submit "Save Person", class: 'btn btn-success'
            .col-md-3
              = link_to "Cancel", :back, class: 'btn btn-default'

  .col-md-4
    %table.table.table-hover
      %thead
        %tr
          %th Current People
      %tbody
        - Person.all.each do |person|
          %tr
            %td
              = person.name
