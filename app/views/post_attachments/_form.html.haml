= form_for @post_attachment do |f|
  - if @post_attachment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post_attachment.errors.count, "error")} prohibited this post_attachment from being saved:"
      %ul
        - @post_attachment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :post_id
    = f.number_field :post_id
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
