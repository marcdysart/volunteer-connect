- content_for :nav_content do
  %h1 Add a New Location

- content_for :main_content do

  %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyCWDYd8haZXygQBD-YxNDCuaxCakY8Ikh4"}

  .col-md-8
    #panel
      %input#address{:type => "textbox", :value => "Conakry, Guinea"}/
      %input{:id => 'find_location',:type => "button", :value => "Search"}/
    #panel-delete-markers
      %input{:id => 'delete_markers', :type => "button", :value => "Delete Markers"}/
    #map-canvas
    = form_for @location do |f|
      %form.form-inline{:role => "form"}
        .form-group
          = f.label :"Enter New Location"
          .row
            .col-md-6
              = f.text_field :name, class: 'form-control', placeholder: "Enter New Location"
            .col-md-3
              = f.submit "Save Location", class: 'btn btn-success'
            .col-md-3
              = link_to "Cancel", :back, class: 'btn btn-default'

  .col-md-4
    %table.table.table-hover
      %thead
        %tr
          %th Current Locations
      %tbody
        - Location.all.each do |location|
          %tr
            %td
              = location.name
