- content_for :nav_content do
  %h1
    = @user.name
  - if @user.avatar?
    .large-avatar-photo
      = image_tag(@user.avatar.profile.url)
  -else
    %span.large-avatar.glyphicon.glyphicon-user

- content_for :main_content do
  .row
    .col-md-12
      - @posts.each do |post|
        = render partial: 'posts/post', locals: { post: post }
